<h1> Información guardada para esta bomba: </h1>


<h2> Así quedaría la cosa..</h2>

<% datos = [] %>
<% @tests_definitivos.each do |lista| %>
	<% if lista[0] != @pump.rodete_max and lista[0] != @pump.rodete_min %>
		<% datos.push([Test.pasar_a_numero(lista[4]), lista[0]]) %>
	<% end %>
<% end %>

<%= link_to "Volver", pump_path(@pump), class: "btn btn-lg", id: "link" %>

<div class="center jumbotron">
	<div id="container" style="width: 1000px; height: 500px; margin: 0 auto"></div>
</div>


<script type="text/javascript">

 var new_series = []
 var data_max = <%= raw @nueva_curva_rodete_max %>
 var data_min = <%= raw @nueva_curva_rodete_min %>
 var new_data = <%= raw datos %>

 for (lista in new_data){
  var dicc = {
    regression: true,
    regressionSettings: {
      type: 'polynomial',
      //color: 'rgba(223, 183, 83, .9)',
      dashStyle: 'solid',
      hideinlegend: false
    },
    name: 'Rodete ' + new_data[lista][1],
    //color: 'rgba(223, 83, 83, .5)',
    data: new_data[lista][0]

  }
  new_series.push(dicc)
 }

 //document.write(data_min)

 var dicc1 = {
    regression: true,
    regressionSettings: {
      type: 'polynomial',
      //color: 'rgba(223, 183, 83, .9)',
      dashStyle: 'solid',
      hideinlegend: false
    },
    name: 'Rodete minimo (' + <%= @pump.rodete_min %> + ')',
    //color: 'rgba(223, 83, 83, .5)',
    data: data_min

  }

  var dicc2 = {
    regression: true,
    regressionSettings: {
      type: 'polynomial',
      //color: 'rgba(223, 183, 83, .9)',
      dashStyle: 'solid',
      hideinlegend: false
    },
    name: 'Rodete maximo (' + <%= @pump.rodete_max %> + ')',
    //color: 'rgba(223, 83, 83, .5)',
    data: data_max

  }
  new_series.push(dicc1)
  new_series.push(dicc2)

 Highcharts.chart('container', {
    chart: {
      type: 'scatter',
      zoomType: 'xy'
    },
    title: {
      text: 'Curvas hidráulicas'
    },
    subtitle: {
      text: ''
    },
    xAxis: {
      min: 0,
      title: {
        enabled: true,
        text: 'Caudal (l/s)'
      },
      startOnTick: true,
      endOnTick: true,
      showLastLabel: true
    },
    yAxis: {
      min: 0,
      title: {
        text: 'Altura (m)'
      }
    },
    legend: {
      layout: 'vertical',
      align: 'left',
      verticalAlign: 'top',
      x: 100,
      y: 70,
      floating: false,
      backgroundColor: '#FFFFFF',
      borderWidth: 1
    },
    plotOptions: {
      scatter: {
        marker: {
          radius: 5,
          states: {
            hover: {
              enabled: true,
              lineColor: 'rgb(100,100,100)'
            }
          }
        },
        states: {
          hover: {
            marker: {
              enabled: false
            }
          }
        },
        tooltip: {
          headerFormat: '<b>{series.name}</b><br>',
          pointFormat: '{point.x} l/s, {point.y} m'
        }
      }
    },
    series: new_series
  });

  </script>